        <Image Source="/spnz3.jpg" Margin="0,-1,0,-1" Stretch="Fill" Visibility="Visible"/>
        <Button Style="{StaticResource MyButton}" Content="" VerticalAlignment="Top" Click="Button_Click" Height="91" Margin="58,135,1007,0">

            <Button.Background>
                <ImageBrush ImageSource="/nowa gra.png"/>
            </Button.Background>
        </Button>
        <Button Style="{StaticResource MyButton}" Content="" Margin="58,221,1007,392" AutomationProperties.IsOffscreenBehavior="Default" Click="Button_Click_3">
            <Button.Background>
                <ImageBrush ImageSource="/wczytaj.png" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="RelativeToBoundingBox" AlignmentY="Center" TileMode="None" Stretch="Fill"/>
            </Button.Background>
        </Button>
        <Button Style="{StaticResource MyButton}" Content="" VerticalAlignment="Center" Height="90" Click="Button_Click_2" BorderBrush="#00000000" Margin="58,0,1007,0">
            <Button.Background>
                <ImageBrush ImageSource="/jakgrac.png"/>
            </Button.Background>
        </Button>
        <Button Style="{StaticResource MyButton}" Content="" VerticalAlignment="Top" Click="Button_Click_1" Height="91" Margin="58,473,1007,0">
            <Button.Background>
                <ImageBrush ImageSource="/wyjdz.png"/>
            </Button.Background>
        </Button>
        <Image Height="127" Margin="61,10,0,0" VerticalAlignment="Top" gif:AnimationBehavior.SourceUri="/neon.gif" HorizontalAlignment="Left" Width="232"/>
    </Grid>




</Window>
